<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="?dialogPreferredPadding"
    android:paddingLeft="?dialogPreferredPadding"
    android:paddingBottom="?dialogPreferredPadding"
    android:paddingTop="?dialogPreferredPadding">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_layout_title"
        android:hint="标题">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_meeting_title" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_layout_time"
        android:hint="时间">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_meeting_time" />

    </android.support.design.widget.TextInputLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/edit_meeting_input"
        android:gravity="top"
        android:hint="原文"
        android:textColorHint="@android:color/white"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/body1_primary" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/edit_meeting_output"
        android:gravity="top"
        android:hint="译文"
        android:textColorHint="@android:color/white"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/body1_primary" />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_edit"
        android:backgroundTint="@color/cardview_light_background"
        app:rippleColor="#9b0b12"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        android:src="@mipmap/ic_voice"

        app:layout_behavior="com.marktony.translator.view.FabHideOnScroll"/>


</LinearLayout>